# This is Git's per-user configuration file.
[user]
name = Sergio Gasquez
email = sergio.gasquez@gmail.com
[core]
editor = code
[alias]
a = add --all
ad = !git commit --amend --no-edit && git push --force
b = branch
bd = branch -d
cm = commit -m
c = clone --recurse-submodules
d = diff
e = edit
f = fetch
fu = fetch upstream
l = pull
log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
o = checkout
pf = push --force
pt= push --tags
r = remote -v
ra = remote add
re = rebase upstream/main
s = status
st = stash
sta = stash apply
stc = stash clear
stp = stash pop
sw = switch
swb = switch -c
t = tag
td = tag -d
[init]
defaultBranch = main
[push]
default = simple
[credential "https://github.com"]
helper =
helper = !/usr/bin/gh auth git-credential
